@model Acunmedya_Travel_Project.Entities.Service
@{
    ViewBag.Title = "AddServices";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid p-4">
    <h2 class="text-light mb-4 pb-2" style="border-bottom: 2px solid rgba(0, 123, 255, 0.3); font-weight: 300; letter-spacing: 1px;">
        <i class="bi bi-plus-circle me-2 text-primary"></i>
        Yeni Tur Ekle
    </h2>

    <div class="card mb-4" style="background-color: #0a0e17; border-color: #1a1f2c;">
        <div class="card-header text-light" style="background-color: #0d1321; border-color: #1a1f2c;">
            <h5 class="m-0"><i class="bi bi-geo-alt me-2 text-info"></i>Tur Bilgilerini Girin</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="Title" class="form-label text-light">Tur Adı</label>
                            @Html.TextBoxFor(x => x.title, new { @class = "form-control", style = "background-color: #131824; color: #ffffff; border-color: #1a1f2c;", placeholder = "Tur adını giriniz" })
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="ImageUrl" class="form-label text-light">Resim URL</label>
                            @Html.TextBoxFor(x => x.image_url, new { @class = "form-control", style = "background-color: #131824; color: #ffffff; border-color: #1a1f2c;", placeholder = "Resim URL'sini giriniz" })
                        </div>
                    </div>
                </div>
                
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="price" class="form-label text-light">Tur Fiyatı</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: #131824; color: #ffffff; border-color: #1a1f2c;">₺</span>
                                @Html.TextBoxFor(x => x.price, "{0:N2}", new { @class = "form-control", style = "background-color: #131824; color: #ffffff; border-color: #1a1f2c;", placeholder = "0.00", type = "number", step = "0.01", min = "0" })
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="total_tickets" class="form-label text-light">Toplam Bilet Sayısı</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: #131824; color: #ffffff; border-color: #1a1f2c;"><i class="bi bi-ticket-perforated"></i></span>
                                @Html.TextBoxFor(x => x.total_tickets, new { @class = "form-control", style = "background-color: #131824; color: #ffffff; border-color: #1a1f2c;", placeholder = "0", type = "number", min = "0" })
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mb-4">
                    <label for="description" class="form-label text-light">Tur Açıklaması</label>
                    @Html.TextAreaFor(x => x.description, new { @class = "form-control", style = "background-color: #131824; color: #ffffff; border-color: #1a1f2c;", rows = "8", placeholder = "Tur açıklamasını giriniz" })
                </div>
                
                <div class="d-flex justify-content-between align-items-center">
                    <a class="btn btn-danger" onclick="confirmCancel()">
                        <i class="bi bi-x-circle me-2"></i>Vazgeç
                    </a>
                    
                    <button type="button" class="btn btn-success" id="btnAddTour" onclick="confirmAdd()">
                        <i class="bi bi-plus-circle me-2"></i>Tur Ekle
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4" style="background-color: #0a0e17; border-color: #1a1f2c;">
                <div class="card-header text-light" style="background-color: #0d1321; border-color: #1a1f2c;">
                    <h6 class="m-0"><i class="bi bi-info-circle me-2 text-info"></i>Tur Önizleme</h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img id="imagePreview" src="https://via.placeholder.com/400x300?text=Resim+Önizleme" class="img-fluid rounded" style="max-height: 200px;" />
                    </div>
                    <h5 id="titlePreview" class="text-center text-light mb-3">Tur Adı</h5>
                    <div class="d-flex justify-content-center">
                        <div class="badge bg-primary me-2 p-2">
                            <i class="bi bi-cash me-1"></i>
                            <span id="pricePreview">₺0.00</span>
                        </div>
                        <div class="badge bg-success p-2">
                            <i class="bi bi-ticket-perforated me-1"></i>
                            <span id="ticketsPreview">0 Bilet</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card mb-4" style="background-color: #0a0e17; border-color: #1a1f2c;">
                <div class="card-header text-light" style="background-color: #0d1321; border-color: #1a1f2c;">
                    <h6 class="m-0"><i class="bi bi-question-circle me-2 text-info"></i>Yardım</h6>
                </div>
                <div class="card-body text-light">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check2 text-primary me-2"></i>Tur adı kısa ve açıklayıcı olmalıdır.</li>
                        <li><i class="bi bi-check2 text-primary me-2"></i>Resim URL'si geçerli bir görsel bağlantısı olmalıdır.</li>
                        <li><i class="bi bi-check2 text-primary me-2"></i>Fiyat TL cinsinden girilmelidir (örn: 1299.99).</li>
                        <li><i class="bi bi-check2 text-primary me-2"></i>Toplam bilet sayısı tur kapasitesini belirtir.</li>
                        <li><i class="bi bi-check2 text-primary me-2"></i>Açıklama alanı detaylı bilgi içermelidir.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function confirmAdd() {
    var form = document.querySelector('form');
    
    var title = document.getElementById('@Html.IdFor(x => x.title)').value;
    var imageUrl = document.getElementById('@Html.IdFor(x => x.image_url)').value;
    var price = document.getElementById('@Html.IdFor(x => x.price)').value;
    var totalTickets = document.getElementById('@Html.IdFor(x => x.total_tickets)').value;
    var description = document.getElementById('@Html.IdFor(x => x.description)').value;
    
    if (!title || !imageUrl || !price || !totalTickets || !description) {
        Swal.fire({
            background: '#000',
            color: '#fff',
            title: "Eksik Bilgi",
            text: "Lütfen tüm alanları doldurunuz!",
            icon: "error",
            confirmButtonColor: "#3085d6",
        });
        return false;
    }
    
    Swal.fire({
        background: '#000',
        color: '#fff',
        title: "Tur Ekle",
        text: "Bu turu eklemek istediğinize emin misiniz?",
        imageUrl: imageUrl || 'https://via.placeholder.com/400x300?text=Resim+Yok',
        imageWidth: 300,
        imageHeight: 200,
        imageAlt: title || 'Tur resmi',
        icon: "question",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Evet, ekle!",
        cancelButtonText: "İptal"
    }).then((result) => {
        if (result.isConfirmed) {
            form.submit();
        }
    });
    }
    function confirmCancel() {
        Swal.fire({
        background: '#000',
        color: '#fff',
        title: "Kaydetmeden çıkmak istediğine emin misim?",
        text: "Eklediğiniz veriler kaydedilmeyecektir!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#d33",
        cancelButtonColor: "#3085d6",
        confirmButtonText: "Kaydetmeden çık!",
        cancelButtonText: "Dünelemeye devam et! "
        }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = "/Service/Index";
        }
        });
    }
</script>