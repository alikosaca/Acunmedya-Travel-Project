@model Acunmedya_Travel_Project.Entities.Admin

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Panel - Acunmedya Travel</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #2d3748;
            --secondary-color: #4a5568;
            --accent-color: #ed8936;
            --light-gray: #f7fafc;
            --border-color: #e2e8f0;
            --text-light: #718096;
            --success-color: #48bb78;
            --error-color: #f56565;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        /* Background Animation */
        .background-shapes {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 15s infinite ease-in-out;
        }

        .shape:nth-child(1) {
            width: 80px;
            height: 80px;
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            width: 120px;
            height: 120px;
            top: 20%;
            right: 10%;
            animation-delay: 2s;
        }

        .shape:nth-child(3) {
            width: 60px;
            height: 60px;
            bottom: 20%;
            left: 20%;
            animation-delay: 4s;
        }

        .shape:nth-child(4) {
            width: 100px;
            height: 100px;
            bottom: 10%;
            right: 20%;
            animation-delay: 6s;
        }

        @@keyframes float {
            0%,
            100% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        /* Login Container */
        .login-container {
            position: relative;
            z-index: 2;
            width: 100%;
            max-width: 440px;
            margin: 0 auto;
            padding: 20px;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.2);
        }

        /* Logo & Header */
        .brand-logo {
            text-align: center;
            margin-bottom: 30px;
        }

        .brand-logo h2 {
            color: var(--primary-color);
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .brand-logo .subtitle {
            color: var(--text-light);
            font-size: 0.9rem;
            font-weight: 500;
        }

        .welcome-text {
            text-align: center;
            margin-bottom: 35px;
        }

        .welcome-text h4 {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 1.4rem;
        }

        .welcome-text p {
            color: var(--text-light);
            font-size: 0.95rem;
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-control {
            background: var(--light-gray);
            border: 2px solid var(--border-color);
            border-radius: 12px;
            padding: 15px 20px 15px 50px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            color: var(--primary-color);
        }

        .form-control:focus {
            background: white;
            border-color: var(--accent-color);
            box-shadow: 0 0 0 3px rgba(237, 137, 54, 0.1);
            outline: none;
        }

        .form-control::placeholder {
            color: var(--text-light);
        }

        .input-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-light);
            font-size: 1.1rem;
            transition: color 0.3s ease;
        }

        .form-control:focus+.input-icon {
            color: var(--accent-color);
        }

        /* Button Styles */
        .btn-login {
            width: 100%;
            background: linear-gradient(135deg, var(--accent-color), #dd6b20);
            border: none;
            border-radius: 12px;
            padding: 15px;
            font-weight: 600;
            font-size: 1rem;
            color: white;
            transition: all 0.3s ease;
            margin-bottom: 20px;
            position: relative;
            overflow: hidden;
        }

        .btn-login::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .btn-login:hover::before {
            left: 100%;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(237, 137, 54, 0.3);
        }

        /* Checkbox */
        .remember-me {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 25px;
        }

        .form-check {
            display: flex;
            align-items: center;
        }

        .form-check-input {
            margin-right: 8px;
            accent-color: var(--accent-color);
        }

        .form-check-label {
            color: var(--text-light);
            font-size: 0.9rem;
            cursor: pointer;
        }

        .forgot-password {
            color: var(--accent-color);
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .forgot-password:hover {
            color: #dd6b20;
        }

        /* Error Messages */
        .error-message {
            background: rgba(245, 101, 101, 0.1);
            border: 1px solid rgba(245, 101, 101, 0.3);
            border-radius: 8px;
            padding: 12px 15px;
            margin-top: 15px;
            color: var(--error-color);
            font-size: 0.9rem;
        }

        .error-message ul {
            margin: 0;
            padding-left: 20px;
        }

        /* Footer */
        .login-footer {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid var(--border-color);
        }

        .login-footer span {
            color: var(--text-light);
            font-size: 0.85rem;
        }

        /* Loading Animation */
        .btn-login.loading {
            pointer-events: none;
        }

        .btn-login.loading::after {
            content: '';
            position: absolute;
            width: 20px;
            height: 20px;
            border: 2px solid transparent;
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
        }

        @@keyframes spin {
            0% {
                transform: translateY(-50%) rotate(0deg);
            }

            100% {
                transform: translateY(-50%) rotate(360deg);
            }
        }

        /* Responsive */
        @@media (max-width: 480px) {
            .login-card {
                padding: 30px 25px;
                margin: 10px;
            }

            .brand-logo h2 {
                font-size: 1.5rem;
            }

            .welcome-text h4 {
                font-size: 1.2rem;
            }
        }
    </style>
</head>

<body>
    <!-- Background Shapes -->
    <div class="background-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <!-- Login Container -->
    <div class="login-container">
        <div class="login-card">
            <!-- Brand Logo -->
            <div class="brand-logo">
                <h2>
                    <i class="bi bi-airplane"></i>
                    Acunmedya Travel
                </h2>
                <p class="subtitle">Admin Panel</p>
            </div>

            <!-- Welcome Text -->
            <div class="welcome-text">
                <h4>Hoş Geldiniz!</h4>
                <p>Devam etmek için giriş yapın</p>
            </div>

            <!-- Login Form -->
            <form action="/Login/Index" method="post" id="loginForm">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.UserName, new {
                        @class = "form-control",
                        @placeholder = "Kullanıcı Adı",
                        @required = "required"
                    })
                    <i class="bi bi-person input-icon"></i>
                </div>

                <div class="form-group">
                    @Html.PasswordFor(x => x.Password, new {
                        @class = "form-control",
                        @placeholder = "Şifre",
                        @required = "required"
                    })
                    <i class="bi bi-lock input-icon"></i>
                </div>

                <div class="remember-me">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">
                            Beni hatırla
                        </label>
                    </div>
                    <a href="#" class="forgot-password">Şifremi unuttum?</a>
                </div>

                <button type="submit" class="btn btn-login" id="loginBtn">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Giriş Yap
                </button>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="error-message">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @Html.ValidationSummary()
                    </div>
                }
            </form>

            <!-- Footer -->
            <div class="login-footer">
                <span>&copy; 2024 Acunmedya Travel. Tüm hakları saklıdır.</span>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const loginForm = document.getElementById('loginForm');
            const loginBtn = document.getElementById('loginBtn');

            // Form submit loading animation
            loginForm.addEventListener('submit', function () {
                loginBtn.classList.add('loading');
                loginBtn.innerHTML = '<span>Giriş yapılıyor...</span>';
            });

            // Input focus animations
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function () {
                    this.parentNode.classList.add('focused');
                });

                input.addEventListener('blur', function () {
                    if (this.value === '') {
                        this.parentNode.classList.remove('focused');
                    }
                });
            });

            // Password visibility toggle (optional enhancement)
            const passwordInput = document.querySelector('input[type="password"]');
            if (passwordInput) {
                const toggleBtn = document.createElement('i');
                toggleBtn.className = 'bi bi-eye position-absolute';
                toggleBtn.style.cssText = 'right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer; color: var(--text-light);';

                passwordInput.parentNode.style.position = 'relative';
                passwordInput.parentNode.appendChild(toggleBtn);

                toggleBtn.addEventListener('click', function () {
                    if (passwordInput.type === 'password') {
                        passwordInput.type = 'text';
                        this.className = 'bi bi-eye-slash position-absolute';
                    } else {
                        passwordInput.type = 'password';
                        this.className = 'bi bi-eye position-absolute';
                    }
                });
            }
        });
    </script>
</body>

</html>
