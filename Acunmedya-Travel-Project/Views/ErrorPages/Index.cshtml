
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Sayfa Bulunamadı</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        .background-animation {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .floating-shapes {
            position: absolute;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.05);
            animation: float 6s ease-in-out infinite;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .floating-shapes:nth-child(1) {
            top: 20%;
            left: 10%;
            animation-delay: 0s;
            width: 80px;
            height: 80px;
        }

        .floating-shapes:nth-child(2) {
            top: 60%;
            left: 80%;
            animation-delay: 2s;
            width: 120px;
            height: 120px;
        }

        .floating-shapes:nth-child(3) {
            top: 80%;
            left: 20%;
            animation-delay: 4s;
            width: 60px;
            height: 60px;
        }

        .floating-shapes:nth-child(4) {
            top: 30%;
            left: 70%;
            animation-delay: 1s;
            width: 90px;
            height: 90px;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }
            50% {
                transform: translateY(-20px) rotate(180deg);
            }
        }

        .container {
            text-align: center;
            color: #ffffff;
            z-index: 2;
            position: relative;
            padding: 2rem;
            backdrop-filter: blur(10px);
            background: rgba(0, 0, 0, 0.4);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
            max-width: 600px;
            width: 90%;
            animation: slideUp 1s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .error-code {
            font-size: 8rem;
            font-weight: 900;
            color: #ff4757;
            margin-bottom: 1rem;
            text-shadow: 0 0 30px rgba(255, 71, 87, 0.5);
        }



        .error-title {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .error-message {
            font-size: 1.2rem;
            opacity: 0.8;
            line-height: 1.6;
        }



            @@media (max-width: 768px) {
            .error-code {
                font-size: 6rem;
            }

            .error-title {
                font-size: 2rem;
            }

            .error-message {
                font-size: 1rem;
            }
        }

        .glitch {
            animation: glitch 2s infinite;
        }

        @@keyframes glitch {
            0% {
                transform: translate(0);
            }
            20% {
                transform: translate(-2px, 2px);
            }
            40% {
                transform: translate(-2px, -2px);
            }
            60% {
                transform: translate(2px, 2px);
            }
            80% {
                transform: translate(2px, -2px);
            }
            100% {
                transform: translate(0);
            }
        }
    </style>
</head>
<body>
    <div class="background-animation">
        <div class="floating-shapes"></div>
        <div class="floating-shapes"></div>
        <div class="floating-shapes"></div>
        <div class="floating-shapes"></div>
    </div>

    <div class="container">
        <div class="error-code glitch">404</div>
        <h1 class="error-title">Sayfa Bulunamadı</h1>
        <p class="error-message">
            Üzgünüz, aradığınız sayfa mevcut değil. Sayfa taşınmış, silinmiş olabilir
            veya yanlış bir adres girmiş olabilirsiniz.
        </p>


    </div>

    <script>
        // Sayfa yüklendiğinde animasyonlar
        window.addEventListener('load', function () {
            console.log('404 sayfası yüklendi');
        });

        // Dinamik parçacık efekti
        function createParticles() {
            const container = document.querySelector('.background-animation');

            setInterval(() => {
                const particle = document.createElement('div');
                particle.className = 'floating-shapes';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.width = (Math.random() * 60 + 40) + 'px';
                particle.style.height = particle.style.width;
                particle.style.animationDelay = Math.random() * 6 + 's';

                container.appendChild(particle);

                // 10 saniye sonra parçacığı kaldır
                setTimeout(() => {
                    if (particle.parentNode) {
                        particle.parentNode.removeChild(particle);
                    }
                }, 10000);
            }, 3000);
        }

        // Parçacık efektini başlat
        createParticles();
    </script>
</body>
</html>