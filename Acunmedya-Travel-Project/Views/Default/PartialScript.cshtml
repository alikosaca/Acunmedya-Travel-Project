            // Update tours content
            const toursContent = document.getElementById('tours-content');
            const tours = tourData[continent];

            toursContent.innerHTML = tours.map(tour => `
                    <div class="tour-card">
                        <img src="${tour.image}" alt="${tour.title}" class="tour-image">
                        <div class="tour-content">
                            <div class="tour-price">${tour.price}</div>
