@model List<Acunmedya_Travel_Project.Entities.Service>

<section class="services-section" id="services">
    <div class="container">
        <div class="section-header">
            <div class="section-badge">Hizmetlerimiz</div>
            <h2 class="section-title">Neden Bizi Tercih Etmelisiniz?</h2>
            <p class="section-description">
                Size en iyi seyahat deneyimini sunmak için her detayı titizlikle planlıyor,
                kaliteli hizmet anlayışımızla yanınızda oluyoruz.
            </p>
        </div>

        <div class="row g-4">
            @foreach(var item in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="service-card">
                        <div class="service-icon-wrapper">
                            <img src="@item.image_url" alt="@item.title" class="service-icon" />
                        </div>
                        <h4>@item.title</h4>
                        <p>@item.description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

