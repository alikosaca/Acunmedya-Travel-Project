<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Acunmedya Travel - Dünyayı Keşfedin</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<style>
    * {
        font-family: 'Inter', sans-serif;
    }

    body {
        line-height: 1.6;
        color: #2d3748;
    }

    /* Color Variables */
    :root {
        --primary-color: #2d3748;
        --secondary-color: #4a5568;
        --accent-color: #ed8936;
        --light-gray: #f7fafc;
        --border-color: #e2e8f0;
        --text-light: #718096;
    }

    /* Navbar */
    .navbar {
        background: rgba(255, 255, 255, 0.95) !important;
        backdrop-filter: blur(20px);
        border-bottom: 1px solid var(--border-color);
        padding: 20px 0;
        transition: all 0.3s ease;
    }

    .navbar-brand {
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--primary-color) !important;
        letter-spacing: -0.5px;
    }

    .navbar-nav .nav-link {
        font-weight: 500;
        margin: 0 15px;
        color: var(--secondary-color) !important;
        transition: color 0.3s ease;
        font-size: 0.95rem;
    }

        .navbar-nav .nav-link:hover {
            color: var(--accent-color) !important;
        }

    /* Hero Section - Sade ve Şık */
    .hero-section {
        background: linear-gradient(135deg, var(--light-gray) 0%, #ffffff 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 120px 0 80px;
        position: relative;
        overflow: hidden;
    }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 45%;
            height: 100%;
            background: url('https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2340&q=80') center/cover;
            border-radius: 20px 0 0 20px;
            opacity: 0.9;
            z-index: 1;
            box-shadow: -20px 0 40px rgba(45, 55, 72, 0.1);
        }

    .hero-image-overlay {
        position: absolute;
        top: 50%;
        right: 5%;
        transform: translateY(-50%);
        width: 400px;
        height: 500px;
        background: url('https://images.unsplash.com/photo-1469474968028-56623f02e42e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2106&q=80') center/cover;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(45, 55, 72, 0.2);
        z-index: 2;
        border: 8px solid white;
    }

    .hero-content {
        position: relative;
        z-index: 3;
        max-width: 600px;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border-color);
        border-radius: 50px;
        padding: 8px 16px;
        margin-bottom: 24px;
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--secondary-color);
        box-shadow: 0 4px 15px rgba(45, 55, 72, 0.1);
    }

    .hero-content h1 {
        font-size: 3.8rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--primary-color);
        line-height: 1.1;
        letter-spacing: -1px;
    }

    .hero-subtitle {
        font-size: 1.3rem;
        color: var(--text-light);
        margin-bottom: 2rem;
        line-height: 1.6;
        font-weight: 400;
    }

    .hero-buttons {
        display: flex;
        gap: 16px;
        margin-bottom: 3rem;
    }

    .btn-hero-primary {
        background: var(--primary-color);
        border: none;
        padding: 16px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        box-shadow: 0 8px 25px rgba(45, 55, 72, 0.2);
    }

        .btn-hero-primary:hover {
            background: var(--secondary-color);
            transform: translateY(-3px);
            color: white;
            box-shadow: 0 12px 35px rgba(45, 55, 72, 0.3);
        }

    .btn-hero-secondary {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid var(--border-color);
        padding: 16px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        color: var(--secondary-color);
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        box-shadow: 0 4px 15px rgba(45, 55, 72, 0.1);
    }

        .btn-hero-secondary:hover {
            border-color: var(--accent-color);
            color: var(--accent-color);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(237, 137, 54, 0.2);
        }

    .hero-stats {
        display: flex;
        gap: 40px;
    }

    .stat-item {
        text-align: left;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        padding: 16px 20px;
        border-radius: 12px;
        border: 1px solid rgba(226, 232, 240, 0.5);
        box-shadow: 0 4px 15px rgba(45, 55, 72, 0.1);
        transition: transform 0.3s ease;
    }

        .stat-item:hover {
            transform: translateY(-2px);
        }

    .stat-number {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--primary-color);
        display: block;
        margin-bottom: 4px;
    }

    .stat-label {
        font-size: 0.9rem;
        color: var(--text-light);
        font-weight: 500;
    }

    /* Services Section - Sade */
        /* Service Icon için özel CSS */
    .service-icon-wrapper {
        width: 80px;
        height: 80px;
        background: var(--light-gray);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        transition: all 0.3s ease;
        overflow: hidden;
        border: 2px solid var(--border-color);
    }

    .service-card:hover .service-icon-wrapper {
        background: var(--accent-color);
        border-color: var(--accent-color);
        transform: scale(1.05);
    }

    .service-icon {
        width: 48px;
        height: 48px;
        object-fit: contain;
        transition: all 0.3s ease;
        filter: none;
    }

    .service-card:hover .service-icon {
        filter: brightness(0) invert(1);
        transform: scale(1.1);
    }

    /* Service Card Genel Stilleri */
    .service-card {
        background: white;
        padding: 40px 24px;
        border-radius: 16px;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
        text-align: center;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

    .service-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(135deg, var(--accent-color), var(--primary-color));
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .service-card:hover::before {
        transform: scaleX(1);
    }

    .service-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 60px rgba(45, 55, 72, 0.15);
        border-color: var(--accent-color);
    }

    .service-card h4 {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 16px;
        color: var(--primary-color);
        line-height: 1.3;
    }

    .service-card p {
        color: var(--text-light);
        line-height: 1.6;
        margin: 0;
        font-size: 0.95rem;
    }

    /* Services Section */
    .services-section {
        padding: 100px 0;
        background: white;
        position: relative;
    }

    .services-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--border-color), transparent);
    }

    .section-header {
        text-align: center;
        margin-bottom: 64px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .section-badge {
        display: inline-block;
        background: var(--light-gray);
        color: var(--secondary-color);
        padding: 8px 20px;
        border-radius: 25px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 16px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border: 1px solid var(--border-color);
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 16px;
        color: var(--primary-color);
        letter-spacing: -0.5px;
        line-height: 1.2;
    }

    .section-description {
        font-size: 1.1rem;
        color: var(--text-light);
        line-height: 1.7;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .service-card {
            padding: 32px 20px;
            margin-bottom: 24px;
        }
        
        .service-icon-wrapper {
            width: 70px;
            height: 70px;
        }
        
        .service-icon {
            width: 40px;
            height: 40px;
        }
        
        .service-card h4 {
            font-size: 1.2rem;
        }
        
        .section-title {
            font-size: 2rem;
        }
        
        .services-section {
            padding: 80px 0;
        }
    }

    @@media (max-width: 576px) {
        .service-card {
            padding: 28px 16px;
        }
        
        .service-icon-wrapper {
            width: 64px;
            height: 64px;
        }
        
        .service-icon {
            width: 36px;
            height: 36px;
        }
    }

    /* Booking Section */
    .booking-section {
        padding: 100px 0;
        background: var(--light-gray);
    }

    .continent-tabs {
        display: flex;
        justify-content: center;
        gap: 8px;
        margin-bottom: 48px;
        flex-wrap: wrap;
    }

    .continent-tab {
        padding: 10px 20px;
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
        font-size: 0.9rem;
        color: var(--secondary-color);
    }

        .continent-tab.active {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .continent-tab:hover {
            border-color: var(--accent-color);
        }

    .tours-container {
        overflow-x: auto;
        padding: 20px 0;
    }

    .tours-scroll {
        display: flex;
        gap: 20px;
        min-width: max-content;
        padding: 0 20px;
    }

    .tour-card {
        min-width: 280px;
        max-width: 280px;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

        .tour-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 40px rgba(45, 55, 72, 0.1);
        }

    .tour-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .tour-content {
        padding: 20px;
    }

    .tour-price {
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--accent-color);
        margin-bottom: 8px;
    }

    .tour-content h5 {
        font-size: 1.1rem;
        margin-bottom: 8px;
        color: var(--primary-color);
        font-weight: 600;
    }

    .tour-content p {
        font-size: 0.9rem;
        color: var(--text-light);
        margin-bottom: 16px;
        line-height: 1.5;
    }

    .tour-content .btn {
        font-size: 0.9rem;
        padding: 10px 20px;
        background: var(--primary-color);
        border: none;
        border-radius: 6px;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .tour-content .btn:hover {
            background: var(--secondary-color);
            transform: translateY(-1px);
        }

    /* Steps Section */
    .steps-section {
        padding: 100px 0;
        background: white;
    }

    .steps-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .step-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 40px;
        padding: 32px;
        background: var(--light-gray);
        border-radius: 16px;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

        .step-item:hover {
            transform: translateX(8px);
            box-shadow: 0 8px 30px rgba(45, 55, 72, 0.1);
        }

    .step-icon-wrapper {
        min-width: 64px;
        height: 64px;
        background: var(--accent-color);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 24px;
    }

    .step-icon {
        font-size: 1.5rem;
        color: white;
    }

    .step-content h4 {
        margin-bottom: 8px;
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--primary-color);
    }

    .step-content p {
        margin: 0;
        color: var(--text-light);
        line-height: 1.6;
    }

    /* Testimonials Section */
    .testimonials-section {
        padding: 100px 0;
        background: var(--light-gray);
    }

    .testimonials-wrapper {
        position: relative;
        overflow: hidden;
    }

    .testimonials-track {
        display: flex;
        gap: 24px;
        animation: scroll 25s linear infinite;
    }

    .testimonial-card {
        background: white;
        padding: 32px;
        border-radius: 16px;
        border: 1px solid var(--border-color);
        text-align: left;
        min-width: 360px;
        position: relative;
    }

    .testimonial-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .testimonial-image {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 16px;
    }

    .testimonial-info h5 {
        color: var(--primary-color);
        margin-bottom: 4px;
        font-weight: 600;
        font-size: 1rem;
    }

    .testimonial-position {
        color: var(--text-light);
        font-size: 0.85rem;
    }

    .testimonial-text {
        color: var(--secondary-color);
        line-height: 1.6;
        margin-bottom: 20px;
        font-size: 0.95rem;
    }

    .stars {
        color: var(--accent-color);
        font-size: 1rem;
    }

    @@keyframes scroll {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(calc(-360px * 4 - 96px));
        }
    }

    .testimonials-track:hover {
        animation-play-state: paused;
    }

    /* Sponsors Section */
    .sponsors-section {
        padding: 80px 0;
        background: white;
        border-top: 1px solid var(--border-color);
    }

    .sponsors-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 32px;
        align-items: center;
        max-width: 1000px;
        margin: 0 auto;
    }

    .sponsor-item {
        background: var(--light-gray);
        border-radius: 12px;
        padding: 24px;
        text-align: center;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

        .sponsor-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(45, 55, 72, 0.1);
        }

    .sponsor-logo {
        height: 48px;
        max-width: 120px;
        object-fit: contain;
        opacity: 0.7;
        transition: opacity 0.3s ease;
    }

    .sponsor-item:hover .sponsor-logo {
        opacity: 1;
    }

    /* Newsletter Section */
    .newsletter-section {
        padding: 80px 0;
        background: var(--primary-color);
        color: white;
    }

        .newsletter-section h3 {
            font-weight: 600;
            margin-bottom: 16px;
        }

        .newsletter-section p {
            opacity: 0.9;
            margin-bottom: 0;
        }

        .newsletter-section .form-control {
            border-radius: 8px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.1);
            color: white;
            padding: 12px 16px;
        }

            .newsletter-section .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        .newsletter-section .btn {
            background: var(--accent-color);
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 500;
        }

    /* Footer */
    .footer {
        background: var(--light-gray);
        color: var(--secondary-color);
        padding: 60px 0 40px;
        border-top: 1px solid var(--border-color);
    }

        .footer h5 {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 20px;
        }

        .footer a {
            color: var(--text-light);
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .footer a:hover {
                color: var(--accent-color);
            }

    .social-icons a {
        color: var(--text-light);
        font-size: 1.25rem;
        margin: 0 8px;
        transition: color 0.3s ease;
    }

        .social-icons a:hover {
            color: var(--accent-color);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2.5rem;
        }

        .hero-buttons {
            flex-direction: column;
        }

        .hero-stats {
            flex-direction: column;
            gap: 20px;
        }

        .section-title {
            font-size: 2rem;
        }

        .step-item {
            flex-direction: column;
            text-align: center;
        }

        .step-icon-wrapper {
            margin-right: 0;
            margin-bottom: 16px;
        }

        .sponsors-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }
    }
</style>
