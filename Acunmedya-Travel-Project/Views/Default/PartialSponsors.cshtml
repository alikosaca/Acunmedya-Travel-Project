@model List<Acunmedya_Travel_Project.Entities.Sponsor>

<section class="sponsors-section">
    <div class="container">
        <div class="section-header">
            <div class="section-badge">Ortaklarımız</div>
            <h2 class="section-title">Güvenilir İş Ortakları</h2>
            <p class="section-description">
                Kaliteli hizmet için işbirliği yaptığımız sektörün önde gelen kurumları.
            </p>
        </div>
        <div class="sponsors-grid">
            @foreach(var item in Model)
            {
                <div class="sponsor-item">
                    <img src="@item.ImageUrl" class="sponsor-logo">
                </div>
            }
        </div>
    </div>
</section>


